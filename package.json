{
	"name": "splitter",
	"version": "1.0.0",
	"description": "Smart Contract to split ethereum to two different address equally.",
	"homepage": "https://github.com/remedcu/Splitter#readme",
	"bugs": {
		"url": "https://github.com/remedcu/Splitter/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/remedcu/Splitter.git"
	},
	"license": "ISC",
	"author": "Shebin John",
	"main": "truffle-config.js",
	"directories": {
		"test": "test"
	},
	"scripts": {
		"analyze-contracts": "slither .",
		"clear-abi": "yarn run hardhat clear-abi",
		"contract-size": "yarn run hardhat size-contracts",
		"coverage": "npx hardhat coverage",
		"doc": "yarn run hardhat docgen",
		"export-abi": "yarn run hardhat export-abi",
		"lint": "npm run lint-sol && npm run lint-js",
		"lint-js": "eslint . --ext .js",
		"lint-sol": "solhint contracts/*.sol",
		"prettier": "prettier --write .",
		"prettier-check": "prettier --check .",
		"test": "npx hardhat test",
		"uml": "npx sol2uml ./contracts -o UML.svg"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn prettier && yarn lint",
			"pre-push": "yarn prettier-check && yarn test"
		}
	},
	"dependencies": {
		"yarn": "^1.22.10"
	},
	"devDependencies": {
		"@nomiclabs/hardhat-ethers": "^2.1.1",
		"@nomiclabs/hardhat-ganache": "^2.0.1",
		"@nomiclabs/hardhat-truffle5": "^2.0.6",
		"@nomiclabs/hardhat-web3": "^2.0.0",
		"@openzeppelin/test-helpers": "^0.5.16",
		"@truffle/contract": "^4.6.1",
		"chai": "4.3.6",
		"chai-as-promised": "7.1.1",
		"coveralls": "^3.1.1",
		"eslint": "^8.23.1",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-truffle": "^0.3.1",
		"ganache": "^7.4.3",
		"hardhat": "^2.10.2",
		"hardhat-abi-exporter": "^2.10.0",
		"hardhat-contract-sizer": "^2.6.1",
		"hardhat-deploy": "^0.11.15",
		"hardhat-docgen": "^1.3.0",
		"hardhat-gas-reporter": "^1.0.9",
		"hardhat-log-remover": "^2.0.2",
		"husky": "^8.0.1",
		"prettier": "^2.7.1",
		"prettier-plugin-solidity": "^1.0.0-dev.23",
		"sol2uml": "^2.2.0",
		"solhint": "^3.3.7",
		"solhint-plugin-prettier": "^0.0.5",
		"solidity-coverage": "^0.7.22",
		"truffle": "^5.5.30",
		"truffle-assertions": "^0.9.2",
		"web3": "^1.8.0"
	}
}
